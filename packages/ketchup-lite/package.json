{
    "name": "ketchup-lite",
    "version": "1.6.8",
    "keywords": [
        "ketchup lite",
        "web component",
        "library",
        "Stencil",
        "pwa",
        "custom elements",
        "components"
    ],
    "description": "Web components library",
    "license": "Apache-2.0",
    "main": "./dist/index.cjs.js",
    "module": "dist/index.js",
    "es2015": "dist/esm/index.mjs",
    "es2017": "dist/esm/index.mjs",
    "unpkg": "dist/ionic.js",
    "types": "dist/types/components.d.ts",
    "collection": "dist/collection/collection-manifest.json",
    "files": [
        "dist/"
    ],
    "scripts": {
      "build": "node -e \"require('fs').rmSync('./target', { recursive: true, force: true })\" && npx stencil build --docs",
      "dev": "node -e \"require('fs').rmSync('./target', { recursive: true, force: true })\" && npx stencil build --dev --watch --serve",
      "test": "npx cypress run",
      "test:open": "npx cypress open"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lucafoscili/ketchup-lite.git"
    },
    "installConfig": {
        "hoistingLimits": "workspaces"
    }
}
