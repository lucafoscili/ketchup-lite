{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "jsxFactory": "h",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "target": "ES2022"
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}
