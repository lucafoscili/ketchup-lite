{
    "name": "ketchup-lite-root",
    "version": "1.0.0",
    "description": "Ketchup Lite Web Components Library",
    "keywords": [
        "ketchup lite",
        "monorepo",
        "web components",
        "showcase",
        "Stencil"
    ],
    "license": "Apache-2.0",
    "author": "Luca Foscili",
    "repository": "https://github.com/lucafoscili/ketchup-lite",
    "dependencies": {
        "dayjs": "^1.11.13",
        "echarts": "5.5.1",
        "prismjs": "^1.29.0"
    },
    "devDependencies": {
        "@stencil/core": "v4.22.2",
        "@stencil/react-output-target": "0.7.4",
        "@stencil/sass": "^3.0.12",
        "@types/node": "^22.8.7",
        "@types/prismjs": "^1.26.5",
        "cypress": "^13.15.1",
        "lerna": "^8.1.9",
        "prettier-eslint": "16.3.0",
        "puppeteer": "^22.9.0",
        "typescript": "^5.6.3"
    },
    "scripts": {
        "lerna": "lerna",
